<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autos"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del auto"
        />
    <EditText
        android:id="@+id/modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo del auto (LE, XLE, Touring)"
        />
    <EditText
        android:id="@+id/marca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca"
        />
    <EditText
        android:id="@+id/añoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Año auto"
        />
    <Button
        android:id="@+id/insertara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar"
        />
    <Button
        android:id="@+id/eliminara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        />
    <Button
        android:id="@+id/consultara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar"
        />
    <Button
        android:id="@+id/actualizara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        />
    <ListView
        android:id="@+id/listaautos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>